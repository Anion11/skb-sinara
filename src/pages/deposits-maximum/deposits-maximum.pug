block content
  main
    .inner
      +breadcrumbs('--banner')
        +breadcrumbs-item('Главная', '/')
        +breadcrumbs-item(pageTitle)
        +breadcrumbs-item(pageTitle, '/', '--mobile')
      +banner({h2: 'Вклад "Максимальный"', p2: 'Повышенная ставка при оформлении страховых продуктов или медицины', infoItems: [{ p2: '<span>10</span>%', p4: 'ставка на весь срок' }, { p2: 'от<span>10 000</span>₽', p4: 'сумма вклада' }], image: 'banner_img--deposit-maximum.png'}, '--deposit-maximum, --layout')
      +section('--background')
        +section-head: +ui-h3('Повышенная ставка при оформлении страховых продуктов или медицины', '--bold')
        +main-calculator(calc)
      +section('--background, --order-up')
        +parameters-new('Параметры', parametersHeadings)
          +ui-tab-item('--active')
            .parameters-new__top
              +ui-h4('Процентные ставки по&nbsp;вкладу', '--bold')
              .parameters-new__close
            +ui-tab(data-tab-group='inside-params')
              +ui-tab-body
                +ui-tab-item('--active')
                  +ui-table(tableData, '--bg-white')
                +ui-tab-item
                  +ui-table(tableData, '--bg-white')
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Условия вклада', '--bold')
              .parameters-new__close
            +parameters-grid(parametersTab ,'--x2')
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Тарифы и документы', '--bold')
              .parameters-new__close
            +document({p4: 'Тарифы банка'})
            +document({p4: 'Заявление о присоединении к Правилам комплексного банковского обслуживания и подключении услуг'})
            +document({p4: 'Реквизиты для безналичного пополнения счета'})
            +document({p4: 'Правила комплексного банковского обслуживания физических лиц в ПАО Банк Синара. Версия 8.4'})
            +document({p4: 'Правила КБО Версии 1.0-8.3'})
            +document({p4: 'Условия предоставления и использования потреб. кредитов в ПАО Банк Синара'})
            +document({p4: 'Способы и адреса для направления обращений получателями финансовых услуг'})
            +document({p4: 'Шаблон справки о заработной плате по форме банка'})
      +section
        +steps(stepsData, '--pd-x0')
      +section
        +usefull([{credit: true}, {reference: true}])
