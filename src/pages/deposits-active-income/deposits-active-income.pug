block content
  main
    .inner
      +breadcrumbs('--banner')
        +breadcrumbs-item('Главная', '/')
        +breadcrumbs-item(pageTitle)
        +breadcrumbs-item(pageTitle, '/', '--mobile')
      +banner({h2: 'Накопительный счёт "Активный доход"', p2: 'Ваше хитрое решение! Повышенная ставка по счёту при оплате покупок любой картой Банка Синара', infoItems: [{ p2: '<span>10</span>%*', p4: 'ставка' }, { p2: 'На ежедневный остаток', p4: 'начисление процентов' }], p6: '*максимальная ставка для новых клиентов в 1 и 2 расчетный месяц', image: 'banner_img--deposit-active-income.png'}, '--deposit-active-income, --layout')
      +section('--background, --m-only')
        +section-head: +ui-h3('Процентные ставки', '--bold')
        +section-head: +ui-checkbox('capital', 'Получить больше дохода', '--white', 'tt')
        +ui-table(tableDataMob, '--bg-white-pd-xl, --m-pd-xs, --m-border0')(data-mob-short='13')
          +ui-accordion({p2: 'Для клиентов, которые впервые открыли счёт в период с 01.08.23 по 30.09.23'}, 'ui-table, --bg-white')
            +ui-table(tableDataMobInsideAccordion)
      +section('--background')
        +section-head: +ui-h3('Повышенная ставка при оплате покупок любой картой Банка Синара', '--bold')
        +main-calculator(calc)
      +section('--background, --order-up')
        +parameters-new('Параметры', parametersHeadings)
          +ui-tab-item('--active')
            .parameters-new__top
              +ui-h4('Процентные ставки по&nbsp;вкладу', '--bold')
              .parameters-new__close
            +ui-tab(data-tab-group='inside-params')
              +ui-tab-body
                +ui-tab-item('--active')
                  +ui-table(tableData, '--t-scroll, --bg-white')(data-scroll-lock-scrollable)
                  +ui-accordion({p3: 'Для клиентов, которые впервые открыли счёт в период с 01.08.23 по 30.09.23'}, '--mt20, --p30, --bg-white')
