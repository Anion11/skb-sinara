            .parameters-new__top
              +ui-h4('Условия по карте', '--bold')
              .parameters-new__close
            +parameters-grid(parametersGrid, '--x2')
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Способы погашения кредита', '--bold')
              .parameters-new__close
            +repayment([{withoutCommission: true}], 'parameters-new')
