      +section
        +conditions(conditionsItems)
      +section
        +save-points('Копите баллы и возвращайте деньги за покупки', savePointsItems)
      +section
        +more-banner
      +section('--background')
        +cards-calculator
      +section
        +cards-categories
      +section
        +point-banner(pointBannerData)
      +section('--background')
        +interest-free
      +section
        +steps(stepsData)
      +section('--background, --order-up')
        +parameters
      +section('--background, --order-up')
        +parameters-new('Параметры', [{ p4: 'Условия кредитования' }, { p4: 'Способы погашения кредита' }, { p4: 'Cпособы подтверждения дохода' }, { p4: 'Тарифы и документы'}], 'Распоряжайтесь и управляйте кредитом так, как вам удобно!')
