block content
  main
    .inner
      +breadcrumbs('--banner')
        +breadcrumbs-item('Главная', '/')
        +breadcrumbs-item(pageTitle)
        +breadcrumbs-item(pageTitle, '/', '--mobile')
      +banner({h2: 'Накопительный счёт "Курс на&nbsp;мечту"', p2: 'Комфортное накопление с неограниченным пополнением и снятием', infoItems: [{ p2: 'до<span>7.5</span>%', p4: 'ставка' }, { p2: 'На минимальный остаток', p4: 'начисление процентов' }], image: 'banner_img--deposit-dream-course.png'}, '--deposit-dream-course, --layout')
      +section('--background')
        +section-head: +ui-h3('Неограниченное пополнение и&nbsp;снятие', '--bold')
        +main-calculator(calc)
      +section('--background, --order-up')
        +parameters-new('Параметры', parametersHeadings)
          +ui-tab-item('--active')
            .parameters-new__top
              +ui-h4('Процентные ставки по&nbsp;вкладу', '--bold')
              .parameters-new__close
            .parameters-new__head
              +ui-checkbox('newClient2', 'Новый клиент', '--white', 'tt')
            +ui-tab(data-tab-group='inside-params')
              +ui-tab-body
                +ui-tab-item('--active')
                  +ui-table(tableData, '--bg-white')(data-scroll-lock-scrollable)
                +ui-tab-item
                  +ui-table(tableData, '--bg-white')(data-scroll-lock-scrollable)
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Условия вклада', '--bold')
              .parameters-new__close
            +parameters-grid(parametersTab ,'--x2')
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Тарифы и документы', '--bold')
              .parameters-new__close
            +document({p4: 'Тарифы банка'})
            +document({p4: 'Заявление о присоединении к Правилам комплексного банковского обслуживания и подключении услуг'})
            +document({p4: 'Реквизиты для безналичного пополнения счета'})
            +document({p4: 'Правила комплексного банковского обслуживания физических лиц в ПАО Банк Синара. Версия 8.4'})
            +document({p4: 'Правила КБО Версии 1.0-8.3'})
            +document({p4: 'Условия предоставления и использования потреб. кредитов в ПАО Банк Синара'})
            +document({p4: 'Способы и адреса для направления обращений получателями финансовых услуг'})
            +document({p4: 'Шаблон справки о заработной плате по форме банка'})
      +section('--background')
        +section-head
          +ui-h3('Копите просто и легко', '--bold')
          +ui-p2('Ежемесячно процент начисляется на минимальный остаток. Как это работает?', 'section-head')
        +money-scheme
      +section
        +privilege(privilegeData)
      +section('--l-pd-x')
        +section-head
          +ui-h3('Открыть счет просто!', '--bold')
          +ui-tab-head([{ p4: 'Mobile' }, { p4: 'Desktop' }, { p4: 'Офис' }], 'section-head')(data-tab-group='instruction')
        +ui-tab(data-tab-group='instruction')
          +ui-tab-body
            +ui-tab-item('--active')
              +instruction(instructionData_1)
            +ui-tab-item
              +instruction(instructionData_2)
            +ui-tab-item
              p 3
      +section
        +questions
      +section
        +usefull([{credit: true}, {reference: true}])
