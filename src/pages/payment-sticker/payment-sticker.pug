block content
  main
    .inner
      +breadcrumbs('--banner')
        +breadcrumbs-item('Главная', '/')
        +breadcrumbs-item('Платежный стикер')
        +breadcrumbs-item('Платежный стикер', '/', '--mobile')
      +banner({h2: 'Платежный стикер', p2: 'Оплата одним касанием телефона', infoItems: [{ icon: 'icon_rocket', p4: 'моментальный <br>выпуск' }, { p2: 'до<span>5</span>%', p4: 'кешбэк в&nbsp;любимых <br>категориях' }], image: 'banner_img--payment-sticker.png'}, '--payment-sticker, --layout')
      +section
        +conditions(conditionsItems)
      +section
        +section-head
          +ui-h3('Как пользоваться стикером', '--bold')
        +instruction(instructionData, '--imgs-w100, --text-max-w')
      +section('--background')
        +parameters-new('Параметры', [{ p4: 'Условия' }, { p4: 'Тарифы и документы'}])
          +ui-tab-item('--active')
            .parameters-new__top
              +ui-h4('Условия', '--bold')
              .parameters-new__close
            +parameters-grid(parametersGrid, '--x3')
            +section-footnote('--max-w900')
              +ui-info: +ui-p5('Остальные условия такие же как и по <a class="ui-primary1" href="#">Универсальной карте</a>', '--secondary3')
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Тарифы и документы', '--bold')
              .parameters-new__close
            +document({p4: 'Тарифы банка'})
            +document({p4: 'Заявление о присоединении к Правилам комплексного банковского обслуживания и подключении услуг'})
            +document({p4: 'Реквизиты для безналичного пополнения счета'})
      +section
        +payment-sticker
      +section
        +questions

