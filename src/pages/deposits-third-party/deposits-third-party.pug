      { p3: 'Сумма вклада', p1: 'от 10 000 ₽ до 3 млн. ₽, от 300 $ до 5 млн. $' },
      { p3: 'Срок вклада', p1: '30 дней, 90 дней, 180 дней, 367 дней, 546 дней, 720 дней, 1080 дней' },
      { table: parametersTable, itemMods: 'parameters-grid__item--x2' }
    ]

    const tableData = {
      thead: [
        {
          mods: 'ui-secondary3',
          th: [
            { text: 'Сумма вклада' },
            { text: '367 дней' },
