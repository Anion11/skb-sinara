block content
  main
    .inner
      +breadcrumbs('--banner')
        +breadcrumbs-item('Главная', '/')
        +breadcrumbs-item(pageTitle)
        +breadcrumbs-item(pageTitle, '/', '--mobile')
      +banner({h2: 'Вклад "Обыкновенное чудо!"', p2: 'Для тех, кто хочет копить и творить добрые дела', infoItems: [{ p2: 'до<span>7</span>%', p4: 'ставка на весь срок' }, { p2: 'от<span>10 000</span>₽', p4: 'сумма вклада' }], image: 'banner_img--deposit-miracle.png'}, '--deposit-miracle, --layout')
      +section('--background, --m-only')
        +section-head: +ui-h3('Процентные ставки', '--bold')
        +section-head('--flex, --m-column-reverse, --m-mb0')
          +ui-tab-head([{ p4: 'Открыть онлайн' }, { p4: 'Открыть в офисе' }], '--bookmarks, --no-outside, --m-2col')(data-tab-group='where')
          +ui-checkbox('capital', 'Получить больше дохода', '--white', 'tt')
        +ui-tab(data-tab-group='where')
          +ui-tab-body(data-tab-group='where')
            +ui-tab-item('--active')
              +ui-table(tableDataMob, '--bg-white-pd-xl')(data-mob-short='')
            +ui-tab-item
              +ui-table(tableDataMob, '--bg-white-pd-xl')(data-mob-short='')
      +section('--background')
        +section-head: +ui-h3('Повышенная ставка для новых клиентов', '--bold')
        +ui-tab
          +ui-tab-head([{p4: 'Открыть онлайн'}, {p4: 'Открыть в офисе'}], '--bookmarks, --m-outside')(data-fake-tabs='')
        +main-calculator(calc)
      +section('--background, --order-up')
        +parameters-new('Параметры', parametersHeadings)
          +ui-tab-item('--active')
            .parameters-new__top
              +ui-h4('Процентные ставки по&nbsp;вкладу', '--bold')
              .parameters-new__close
            .parameters-new__head.parameters-new__head--flex.parameters-new__head--mb0
              +ui-tab-head([{ p4: 'Открыть онлайн' }, { p4: 'Открыть в офисе' }], '--bookmarks, --no-outside')(data-tab-group='inside-params')
              +ui-switch('newClientSwitch', {p4: 'Получить больше дохода'})
                +ui-tooltip('', 'Test')
            +ui-tab(data-tab-group='inside-params')
              +ui-tab-body
                +ui-tab-item('--active')
                  +ui-table(tableData, '--t-scroll, --bg-white')(data-scroll-lock-scrollable)
                +ui-tab-item
                  +ui-table(tableData, '--t-scroll, --bg-white')(data-scroll-lock-scrollable)
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Условия вклада', '--bold')
              .parameters-new__close
            +parameters-grid(parametersTab ,'--x2')
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Тарифы и документы', '--bold')
              .parameters-new__close
            +document({p4: 'Тарифы банка'})
            +document({p4: 'Заявление о присоединении к Правилам комплексного банковского обслуживания и подключении услуг'})
            +document({p4: 'Реквизиты для безналичного пополнения счета'})
            +document({p4: 'Правила комплексного банковского обслуживания физических лиц в ПАО Банк Синара. Версия 8.4'})
            +document({p4: 'Правила КБО Версии 1.0-8.3'})
            +document({p4: 'Условия предоставления и использования потреб. кредитов в ПАО Банк Синара'})
            +document({p4: 'Способы и адреса для направления обращений получателями финансовых услуг'})
            +document({p4: 'Шаблон справки о заработной плате по форме банка'})
      +section
        +charity-banner
      +section('--l-pd-x')
        +section-head
          +ui-h3('Открыть вклад просто!', '--bold')
          +ui-tab-head([{ p4: 'Mobile' }, { p4: 'Desktop' }, { p4: 'Офис' }], 'section-head')(data-tab-group='instruction')
        +ui-tab(data-tab-group='instruction')
          +ui-tab-body
            +ui-tab-item('--active')
