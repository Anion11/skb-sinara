block content
  main
    .inner
      +breadcrumbs('--banner')
        +breadcrumbs-item('Главная', '/')
        +breadcrumbs-item('Кредитные каникулы для мобилизованных')
        +breadcrumbs-item('Кредитные каникулы для мобилизованных', '/', '--mobile')
      +banner({h2: 'Способы погашения кредита', p2: 'Вносите платежи по кредиту с комфортом', image: 'banner_img--repayment.png'}, '--layout')
      +section
        +repayment([{withoutCommission: true}], '--credit-holidays')
      +section
        +credit-holidays-table
      +section('--background, --order-up')
        +parameters
      +section('--background, --order-up')
        +parameters-new('Параметры', [{ p4: 'Условия кредитования' }, { p4: 'Способы погашения кредита' }, { p4: 'Cпособы подтверждения дохода' }, { p4: 'Тарифы и документы'}], 'Распоряжайтесь и управляйте кредитом так, как вам удобно!')
