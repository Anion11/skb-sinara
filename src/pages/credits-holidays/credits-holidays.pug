            .parameters-new__top
              +ui-h4('Условия кредитования', '--bold')
              .parameters-new__close
            +parameters-grid(parametersGrid, '--x3')
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Способы погашения кредита', '--bold')
              .parameters-new__close
            +repayment([{withoutCommission: true}], 'parameters-new')
            +repayment([{withCommission: true}], 'parameters-new')
          +ui-tab-item
            .parameters-new__top
              +ui-h4('Cпособы подтверждения дохода', '--bold')
              .parameters-new__close
            +ui-h5('Подтвердите свой доход за несколько минут', 'parameters-new, --bold')
            +ui-accordion({p2: 'Выписка о состоянии счёта ПФР'})
              +ui-p2('Должна содержать:', 'parameters-new, --bold')
              +ui-ul(parametersListItems, 'parameters-new')
              +ui-p3('Срок действия: 6 месяцев')
            +ui-accordion({p2: 'Справка по форме банка'})
            +ui-accordion({p2: 'Справка по форме ФНС'})
            +ui-accordion({p2: 'Выписка по счёту'})
            +ui-accordion({p2: 'Декларация 3-НДФЛ'})
            +ui-accordion({p2: 'Подтверждение, что вы получаете пенсию менее 12 месяцев'})
            +ui-accordion({p2: 'Выписка со счёта для зачисления пенсии'})
            +ui-accordion({p2: 'Справка организации, назначившей пенсию'})
