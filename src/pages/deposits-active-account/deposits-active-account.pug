        +privilege(privilegeData)
      +section('--l-pd-x')
        +section-head
          +ui-h3('Открыть счет просто!', '--bold')
          +ui-tab-head([{ p4: 'Mobile' }, { p4: 'Desktop' }], 'section-head, --no-outside,  --m-2col')(data-tab-group='instruction')
