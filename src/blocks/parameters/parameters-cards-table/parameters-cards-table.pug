mixin parameters-cards-table(mods)
  -
    const baseName = 'parameters-cards-table'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .parameters-cards-table(class=allMods)&attributes(attributes)
    .parameters-cards-table__wrapper(data-scroll-lock-scrollable)
      .parameters-cards-table__body
        .parameters-cards-table__line
          .parameters-cards-table__cell.parameters-cards-table__cell--bb0
          .parameters-cards-table__cell.parameters-cards-table__cell--head
            +ui-p3('Классические <br>MIR Privilege', '--bold, --primary1')
          .parameters-cards-table__cell.parameters-cards-table__cell--head
            +ui-p3('Золотые <br>MIR Advanced', '--bold, --primary1')
        .parameters-cards-table__line
          .parameters-cards-table__cell: +ui-p3('Выпуск и обслуживание карты')
          .parameters-cards-table__cell.parameters-cards-table__cell--span2: +ui-p3('0 ₽')
        .parameters-cards-table__line
          .parameters-cards-table__cell: +ui-p3('Информирование об операциях с использованием карты')
          .parameters-cards-table__cell.parameters-cards-table__cell--span2: +ui-p3('0 ₽ – при ежемесячном остатке на карте от 30 000 ₽, в ином случае - 99 ₽/мес., либо 899 ₽/год')
        .parameters-cards-table__line
          .parameters-cards-table__cell: +ui-p3('Снятие наличных')
          .parameters-cards-table__cell: +ui-p3('')
            p Бесплатно:
            +ui-ul('')
              li в банкоматах ПАО Банк Синара, АО «Газэнергобанк»
              li
                span в сторонних банкоматах
                  =' '
                  span.ui-nowrap до 50 000 ₽/мес.
                    +ui-tooltip('', 'tt')
            p 0,1%, мин. 50 ₽ - в кассах ПАО Банк Синара и АО «Газэнергобанк»
            p 1%, мин. 150 ₽ - в кассах других банков
          .parameters-cards-table__cell: +ui-p3('')
            p Бесплатно:
            +ui-ul('')
              li в банкоматах ПАО Банк Синара, АО «Газэнергобанк»
              li
                span в сторонних банкоматах
                  =' '
                  span.ui-nowrap до 100 000 ₽/мес.
                    +ui-tooltip('', 'tt')
              li в кассах ПАО Банк Синара, АО Газэнергобанк
            p 1%, мин. 150 ₽ - в кассах других банков
        .parameters-cards-table__line
          .parameters-cards-table__cell: +ui-p3('Переводы в интернет-банке или мобильном приложении с использованием Системы быстрых платежей')
          .parameters-cards-table__cell.parameters-cards-table__cell--span2
            +ui-p3('')
              p до 100 000 ₽ – 0%
              p свыше 100 000 ₽ – 0,5%, но не более 1 500 ₽
        .parameters-cards-table__line
          .parameters-cards-table__cell
            +ui-p3('Кешбэк')
              +ui-tooltip('', 'tt')
          .parameters-cards-table__cell
            +ui-p3('')
              p до 1%, в т.ч. за оплату ЖКХ
              p 0,5% при покупках от 10 000 Р/мес.
              p 1% при покупках от 70 000 Р/мес.
          .parameters-cards-table__cell
            +ui-p3('')
              p до 1,5%, в т.ч. за оплату ЖКХ
              p 0,5% при покупках от 10 000 Р/мес.
              p 1,5% при покупках от 70 000 Р/мес.
    block
