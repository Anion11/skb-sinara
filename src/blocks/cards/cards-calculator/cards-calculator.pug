mixin cards-calculator(type, mods)
  -
    const baseName = 'cards-calculator'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .cards-calculator(class=allMods)&attributes(attributes)
    case type
      when 'categories'
        .cards-calculator__section
          .cards-calculator__grid.cards-calculator__grid--col3
            .cards-calculator__group
              .cards-calculator__item
                +ui-p3('Группа 1', 'cards-calculator')
                +ui-select('--bold, cards-calculator')(required data-not-escape='')
                  option='<img src="images/cards-calculator_select-0.png"/>Маркетплейсы'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь 2'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь 3'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь 4'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь 5'
              .cards-calculator__item
                +ui-p3('Сумма покупок в группе 1', 'cards-calculator')
                +ui-input('', '', 'cards-calculator, --background1', 'summ')(value='1000', data-step='500', data-min='500', data-max='1000000' pattern='[0-9]*' inputmode='numeric')
                  +ui-svg('icon_minus')
                  +ui-svg('icon_plus')
                .cards-calculator__limits
                  +ui-p5('от  500 ₽', '--secondary3')
                  +ui-p5('до  1 млн ₽', '--secondary3')
            .cards-calculator__group
              .cards-calculator__item
                +ui-p3('Группа 2', 'cards-calculator')
                +ui-select('--bold, cards-calculator')(required data-not-escape='')
                  option='<img src="images/cards-calculator_select-0.png"/>Маркетплейсы'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь 2'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь 3'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь 4'
                  option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь 5'
              .cards-calculator__item
                +ui-p3('Сумма покупок в группе 2', 'cards-calculator')
                +ui-input('', '', 'cards-calculator, --background1', 'summ')(value='1000', data-step='500', data-min='500', data-max='1000000' pattern='[0-9]*' inputmode='numeric')
                  +ui-svg('icon_minus')
                  +ui-svg('icon_plus')
                .cards-calculator__limits
                  +ui-p5('от  500 ₽', '--secondary3')
                  +ui-p5('до  1 млн ₽', '--secondary3')
            .cards-calculator__group
              .cards-calculator__item
                +ui-p3('Группа 3', 'cards-calculator')
                +ui-select('--bold, cards-calculator')(required data-not-escape='')
