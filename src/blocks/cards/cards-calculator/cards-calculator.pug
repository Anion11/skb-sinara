        .cards-calculator__body
          .cards-calculator__item
            +ui-p3('Выберите любимую категорию, где вы чаще всего делаете покупки', 'cards-calculator')
            +ui-select('--bold, cards-calculator')(required data-not-escape='')
              option='<img src="images/cards-calculator_select-0.png"/>Маркетплейсы'
              option='<img src="images/cards-calculator_select-1.png"/>Одежда и обувь'
              option='<img src="images/cards-calculator_select-2.png"/>Мой дом'
              option='<img src="images/cards-calculator_select-3.png"/>Праздник'
              option='<img src="images/cards-calculator_select-4.png"/>Город'
              option='<img src="images/cards-calculator_select-5.png"/>Развлечения'
              option='<img src="images/cards-calculator_select-6.png"/>Прочее'
            +ui-p3('Сумма покупок в любимой категории', 'cards-calculator')
              +ui-tooltip('', 'Test')
            +ui-input('', '', 'cards-calculator, --background1', 'summ')(value='1000', data-step='500', data-min='500', data-max='1000000' pattern='[0-9]*' inputmode='numeric')
              +ui-svg('icon_minus')
              +ui-svg('icon_plus')
            .cards-calculator__limits
              +ui-p5('от  500 ₽', '--secondary3')
              +ui-p5('до  1 млн ₽', '--secondary3')
            +ui-p3('Сумма покупок в остальных категориях', 'cards-calculator')
              +ui-tooltip('', 'Test')
            +ui-input('', '', 'cards-calculator, --background1', 'summ')(value='1000', data-step='500', data-min='500', data-max='1000000' pattern='[0-9]*' inputmode='numeric')
              +ui-svg('icon_minus')
              +ui-svg('icon_plus')
            .cards-calculator__limits
              +ui-p5('от  500 ₽', '--secondary3')
              +ui-p5('до  1 млн ₽', '--secondary3')
            +ui-checkbox('cardsMore', 'Можно больше', 'cards-calculator')
              +ui-tooltip('', 'Test')
          .cards-calculator__item
            .cards-calculator__info
              .cards-calculator__category
                .cards-calculator__image: img(src='../../images/cards/cards-categories_img1.png', alt='Одежда и обувь')
                .cards-calculator__text
                  +ui-p7('Вам подходит категория', '--uppercase, --secondary3')
                  +ui-h6('Одежда и обувь', 'cards-calculator, --bold')
                    span=' 5%'
              .cards-calculator__line
                +ui-p2('Общая сумма покупок', '--secondary3')
