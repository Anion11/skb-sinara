      .menu__button(data-menu='cards')
        +ui-svg('icon_menu-card')
        +ui-p8('Карты')
      .menu__button(data-menu='deposits')
        +ui-svg('icon_menu-chart')
        +ui-p8('Вклады')
      .menu__button.menu__button--main(data-menu='main')
        span
        span
        span
      .menu__button(data-menu='credits')
        +ui-svg('icon_menu-wallet')
        +ui-p8('Кредиты')
          +ui-svg('icon_star--red')
      a.menu__button(href='offices.html')
        +ui-svg('icon_menu-geo')
        +ui-p8('Банкоматы')

    .menu__body(data-menu='cards' data-scroll-lock-scrollable)
      .menu__top
        +ui-h4('Карты', '--bold')
        .menu__swipe
        .menu__close
      +ui-p2('Кредитные карты', '--bold')
