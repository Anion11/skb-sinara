          +ui-p1('Кредитная <br>карта «ДА!»', '--bold')
          .menu__image
            img(src='../../images/menu_banner1.png', alt='Кредитная карта «ДА!»')
      +ui-p2('Дебетовые карты', '--bold')
      .menu__menu
        .menu__item.menu__item--x3t
