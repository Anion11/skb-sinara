mixin interest-free(mods)
  -
    const baseName = 'interest-free'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }
    const listItems1 = [
      { p3: 'До 31 дней на покупки. Количество дней на совершение покупок зависит от количества дней в месяце.' },
      { p3: 'Следующие 25 дней на обязательные платежи. Сумма для погашения отображается в интернет банке и мобильном приложении Банка Синара.' }
    ]

  .interest-free(class=allMods)&attributes(attributes)
    .interest-free__head
      +ui-h3('56 дней без процентов', 'interest-free, --bold')
      +ui-p3('Совершайте покупки, копите бонусные баллы и не платите проценты.')
      +ui-p3('Льготный период начинается на следующий день после получения карты. Длится он до 56 дней.', 'interest-free')
      +ui-ul(listItems1, 'interest-free')
      +ui-p3('Одновременно с наступлением обязательных платежей наступает новый период на покупки.')
    .interest-free__body.interest-free__body--desktop
      .interest-free__line
        .interest-free__item.interest-free__item--gc6-9.interest-free__item--gradient2
          +ui-p6('Льготный период №3', '--bold')
