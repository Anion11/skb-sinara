mixin ui-accordion(head, mods)
  -
    const baseName = 'ui-accordion'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .ui-accordion(class=allMods)&attributes(attributes)
    .ui-accordion__head
      if head.p2
        +ui-p2(head.p2)
      if head.p3
        +ui-p3(head.p3)
      .ui-accordion__toggle
    .ui-accordion__body
      .ui-accordion__wrap
        block
